@model Locadora.Models.ViewModels.JogoViewModel

@{
    ViewBag.Title = "Alterar";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h2>Alterar</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Jogo</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.JogoProp.IdJogo)

        <div class="form-group">
            @Html.LabelFor(model => model.JogoProp.Titulo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.JogoProp.Titulo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.JogoProp.Titulo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.JogoProp.Ano, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.JogoProp.Ano, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.JogoProp.Ano, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Imagem, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <img src="@Model.NomeImagem" height="300" width="300" id="imagemHtml" />
                @Html.TextBoxFor(model => model.Imagem, new { type = "file" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.JogoProp.IdGenero, "IdGenero", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.JogoProp.IdGenero, Model.ListaGeneros, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.JogoProp.IdGenero, "IdGenero", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.CheckBoxListFor(model => model.ConsolesPostados.IdConsoles,  @*Os ID's que serão postados para o controller*@
                 model => model.ListaConsoles,                                     @*As opções exibidas*@
                 console => console.IdConsole,                                     @*O campo do objeto que é o ID*@
                 console => console.NomeConsole,                                   @*A descrição na checkbox*@
                 model => model.ListaConsolesSelecionados,                         @*Opções pré-marcadas*@
                 MvcCheckBoxList.Model.Position.Horizontal)                        @*orientação da checkboxlist*@
            </div>
         </div>

@Html.HiddenFor(model => model.NomeImagem)

<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="Save" class="btn btn-default" />
    </div>
</div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
