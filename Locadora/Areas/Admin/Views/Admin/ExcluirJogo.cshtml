@model Locadora.Models.ViewModels.JogoViewModel

@{
    ViewBag.Title = "Excluir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Excluir</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Midia</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.JogoProp.Titulo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.JogoProp.Titulo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.JogoProp.Ano)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.JogoProp.Ano)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.JogoProp.Capa)
        </dt>

        <dd>
            <img src="@Model.NomeImagem" height="300" width="300"/>
        </dd>

        <dt>
            @Html.DisplayName("Gênero")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.JogoProp.Genero.NomeGenero)
        </dd>

        <dt>
            @Html.DisplayName("Plataforma")
        </dt>

        <dd>
            @foreach (var item in Model.ListaConsolesSelecionados)
            {
                <ul>@item.NomeConsole</ul>
            }
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
        </div>
    }
</div>
